<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/public/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Baloo+2:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <nav>
        <div class="container">
          <div class="nav-branding">
            <h1>The Llama Farm</h1>
            {{#if isAuthenticated}}
              <p class="welcome-message">Welcome to the herd,
                {{user.firstName}}!</p>
            {{/if}}
          </div>
          <ul>
            <li><a href="/">Home</a></li>
            {{#if isAuthenticated}}
              <li><a href="/dashboard">Dashboard</a></li>
              <li><a href="/logout">Logout</a></li>
            {{else}}
              <li><a href="/users/new">Register</a></li>
              <li><a href="/login">Login</a></li>
            {{/if}}
          </ul>
        </div>
      </nav>
    </header>

    <main class="container">
      {{{body}}}
    </main>

    <footer>
      <div class="container">
        <p>&copy; 2025 The Llama Farm. All rights reserved.</p>
      </div>
    </footer>

  </body>
</html>